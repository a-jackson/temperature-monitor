{
  "name": "temperature-monitor",
  "version": "0.0.1",
  "description": "Read temperature values",
  "author": "a-jackson",
  "license": "MIT",
  "scripts": {
    "test": "nyc --clean --all --require ts-node/register --require reflect-metadata/Reflect --extension .ts -- mocha --exit --timeout 5000",
    "test:all": "npm test **/*.spec.ts",
    "start": "ts-node src/bootstrap.ts",
    "startmock": "npm run prestart; ts-node src/bootstrap.ts --mock",
    "lint": "tslint --project tsconfig.json --config tslint.json --fix",
    "pretty": "prettier --write src/**/*.ts",
    "prestart": "npm run lint;npm run pretty"
  },
  "dependencies": {
    "body-parser": "1.18.3",
    "express": "4.16.2",
    "helmet": "3.15.0",
    "inversify": "5.0.1",
    "inversify-binding-decorators": "3.2.0",
    "inversify-express-utils": "6.2.0",
    "inversify-logger-middleware": "3.1.0",
    "morgan": "1.9.1",
    "reflect-metadata": "0.1.12",
    "w1temp": "^4.4.0"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.25",
    "@types/body-parser": "1.17.0",
    "@types/chai": "4.1.4",
    "@types/express": "4.16.0",
    "@types/helmet": "0.0.42",
    "@types/mocha": "5.2.3",
    "@types/morgan": "1.7.35",
    "chai": "4.1.2",
    "mocha": "5.2.0",
    "nyc": "12.0.1",
    "prettier": "1.16.1",
    "ts-node": "7.0.1",
    "tslint": "^5.12.1",
    "typescript": "2.7.2"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts"
    ]
  }
}
